%button.btn.btn-default.btn-sm.reload-btn{'ng-click' => 'reloadData()'} Odśwież
%span.users-count Zarejestrowani użytkownicy: {{users.length}}
%input.form-control{'ng-model'=> 'userFilter', 'placeholder' => 'Szukaj'}

%table.table.table-striped
  %thead
    %tr
      %th
        Foto
      %th.name-header{'ng-click' => "order.setAttr('name')" }
        .btn.btn-sm.btn-default Imię
      %th.nickname-header{'ng-click' => "order.setAttr('nickname')" }
        .btn.btn-sm.btn-default Nickname
      %th.email-header{'ng-click' => "order.setAttr('email')" }
        .btn.btn-sm.btn-default Email
      %th{'ng-click' => "order.setAttr('best_score')" }
        .btn.btn-sm.btn-default Rekord
      %th{'ng-click' => "order.setAttr('gameplays')" }
        .btn.btn-sm.btn-default Podejścia
      %th{'ng-click' => "order.setAttr('created_at_unix')" }
        .btn.btn-sm.btn-default Data rejestracji
      %th{'ng-click' => "order.setAttr('updated_at_unix')" }
        .btn.btn-sm.btn-default Ostatnia aktywność
      %th
  %tbody
    %tr{'ng-repeat' => 'user in users | orderBy:order.attr:order.reverse |  filter:userFilter'}
      %td
        {{user.name}}
      %td
        {{user.nickname}}
      %td
        {{user.email}}
      %td
        {{user.best_score}}
      %td
        {{user.gameplays}}
      %td
        {{user.created_at_txt}}
      %td
        {{user.updated_at_txt}}
      %td
        .btn.btn-sm.btn-danger{'ng-click' => "removeUser(user.id)", 'confirm-click' => 'Usunąć dane użytkownika?'} Usuń
